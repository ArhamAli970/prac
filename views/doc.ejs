<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>

    <h1>DATA OF USERS</h1>

    <form action="/add">
        <button>ADD</button>
    </form>

    <table border="1px">
        <tr>
            <th>S_No.</th>
            <th>ID</th>
            <th>Username</th>
            <th>email</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
        
        <% for (let user of result ) { %>
        <tr>
            <td> <%= cnt++ %> </td>
            <td> <%=user.id %> </td>
            <td> <%=user.username %> </td>
            <td> <%= user.email %> </td> 
            <td>
                <form action="/user/<%=user.id%>/edit" method="get">
                <button>edit username</button>
            </form>
            </td>
            <td>
                <form action="/user/<%=user.id%>/delete" method="get">
                <button>Delete</button>
            </form>
            </td>
        </tr> 

      <%  } %>

    </table>
    
</body>
</html>